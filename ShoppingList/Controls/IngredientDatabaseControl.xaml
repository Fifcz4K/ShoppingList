<UserControl x:Class="ShoppingList.Controls.IngredientDatabaseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoppingList.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid Background="#40ffdada"
          Margin="0 0 0 2">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Ingredient"
                       FontSize="13"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       x:Name="ingredientNameTextblock"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Category"
                       x:Name="ingredientCategoryTextblock"
                       VerticalAlignment="Center"
                       FontSize="10"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
