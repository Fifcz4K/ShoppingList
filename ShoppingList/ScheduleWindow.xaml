<Window x:Class="ShoppingList.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ScheduleWindow" Height="700" Width="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>
                <Button Content="+"
                        Margin="5"
                        Padding="1 0 0 4"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        FontSize="17"
                        FontWeight="Bold"
                        x:Name="addDishButton"
                        Click="addDishButton_Click"/>
                <Button Content="-"
                        Margin="5"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        FontSize="17"
                        FontWeight="Bold"
                        Grid.Column="1"
                        x:Name="deleteDishButton"
                        Click="deleteDishButton_Click"/>
                <ListView x:Name="dishListview"
                            Grid.Row="1"
                            Grid.ColumnSpan="3"
                            Margin="5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock x:Name="dishTextblock"
                                        Text="{Binding Dish}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock FontWeight="Bold"
                                            FontSize="14"
                                            FontStyle="Italic"
                                            Text="{Binding Name}"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
                </ListView>
            </Grid>
        <ListView x:Name="ingredientListview"
                  Height="630"
                  Foreground="Black"
                  Grid.Column="1"
                  Margin="10 5"
                  Loaded="ingredientListview_Loaded"
                  Width="400">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ingredient" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Count" Width="65" DisplayMemberBinding="{Binding Counter}"/>
                </GridView>
            </ListView.View>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold"
                                        FontSize="13"
                                        FontStyle="Italic"
                                        Text="{Binding Name}"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
    </Grid>
</Window>
