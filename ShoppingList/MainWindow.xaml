<Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="15 15 25 25">
            <ListView x:Name="dishListView">

            </ListView>
        </StackPanel>
        <StackPanel Grid.Column="1" 
                    Grid.RowSpan="2" 
                    Margin="25 15 15 15">
            <ListView x:Name="ingredientListView">
                
            </ListView>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Margin="15 25 25 15"> 
            <Button Content="Dodaj jedzonko"
                    Margin="0 0 10 0"
                    x:Name="addDishButton"/>
        </StackPanel>
    </Grid>
</Window>
