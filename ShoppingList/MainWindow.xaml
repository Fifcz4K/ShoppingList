<Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="150" Width="300">
    <Grid Margin="5">
        <StackPanel Margin="5"
                    VerticalAlignment="Center">
            <Button Content="Update database"
                    Margin="5"
                    x:Name="updateDatabaseButton"
                    Click="updateDatabaseButton_Click"/>
            <Button Content="Schedule your week"
                    Margin="5"
                    x:Name="scheduleButton"
                    Click="scheduleButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
